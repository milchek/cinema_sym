{% extends 'base.html.twig' %}

{% block title %}Film{% endblock %}

{% block body %}
    <h1>Film</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ film.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ film.nom }}</td>
            </tr>
            <tr>
                <th>DateSortie</th>
                <td>{{ film.dateSortie |date("d/m/Y") }} </td>
            </tr>
            <tr>
                <th>Affiche</th>
                <td><img src="{{ asset('images/') ~ film.photo }}" alt="">
                </td>
            </tr>
            <tr>
                <th>synopsis</th>
                <td>{{ film.synopsis }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_film_index') }}">back to list</a>

    <a href="{{ path('app_film_edit', {'id': film.id}) }}">edit</a>

    {{ include('film/_delete_form.html.twig') }}
{% endblock %}
